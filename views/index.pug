extends layout

block content

  //- Portafolio Seccion

  section(class="d-flex vh-100 bg-primary justify-content-center align-items-center masthead", id="portafolio")
    
    
    div(class="justify-content-center")
        div(class="row justify-content-center")
            div(class="col-md-10 col-lg-10 col-10")
              img(src="/images/flower_shop.jpg", class="img-thumbnail img_header", alt="Alt")
        div(class="container-fluid justify-content-center py-4")
          div(class="row justify-content-center")
            h1(class="text-white text-uppercase") Flower Shop
          div(class="row justify-content-center")
            h5(class="font-weight-light text-white") Custom heart details


  section(id="flower_arrangements")
